<h2>Timeline: {{model.title}}</h2>
<div class="timeline">
  <div class="new-about-inner">
    <form {{action "save" on='submit'}}>
      <p>{{input value=model.title placeholder="Title" class="title"}}</p>
      <p>{{pikaday-input value=model.eventDate class="spec-about-datepicker date" format="MMMM Do YYYY"}}</p>
      <p>{{textarea value=model.description placeholder="Body" class="timeline-text-area description"}}</p>
      <p><a href="#" {{action "togglePreview"}}>Toggle Preview</a></p>

      <label for="is_published">Published:</label>
      {{#x-select value=false action="selectionsChanged" id="is_published"}}
        {{#x-option value=true}}Published{{/x-option}}
        {{#x-option value=false}}Unpublished{{/x-option}}
      {{/x-select}}
      <ul class="edit-posts-list">
        <li><a href="#" {{action "destroy"}}>Delete</a></li>
      </ul>
      <button type="submit" class="btn spec-about-save">Save</button>
    </form>
  </div>
  <div class="timeline-preview preview {{openPreview:show:hide}}">
    <div class="timeline-card">
      <h4>{{model.title}}</h4>
      {{{format-markdown model.description}}}
      <span class="date">{{model.formattedDate}}</span>
    </div>
  </div>
</div>
