<form>
  From: {{date-picker date=graphStartDate format="MMMM Do YYYY" valueFormat='YYYY-MM-DD' maxDate=maxDate placeholder="Start Date"}}
  To: {{date-picker date=graphEndDate format="MMMM Do YYYY" valueFormat='YYYY-MM-DD' maxDate=maxDate placeholder="End Date"}}
</form>

<div {{bind-attr class=":chart-container loadingData:loading:loaded"}}>
  {{c3-chart data=graphData axis=axis bar=bar}}

  <div {{bind-attr class=":loading-spinner loadingData:show:hide"}}>
    <div class="double-bounce1"></div>
    <div class="double-bounce2"></div>
  </div>
</div>

<dl>
  <dt>Most traffic</dt><dd>{{minValue}}</dd>
  <dt>Least traffic</dt><dd>{{maxValue}}</dd>
</dl>
